<%= render 'spree/admin/shared/configuration_menu' %>

<% content_for :page_title do %>
  <%= Spree.t('sociable.admin.title.index') %>
<% end %>

<% content_for :page_actions do %>
  <li><%= button_link_to Spree.t('sociable.admin.buttons.back_sociable'), admin_sociable_path, icon: 'arrow-left' %></li>
  <li><%= button_link_to Spree.t('sociable.admin.buttons.link_new'), new_admin_sociable_link_path, icon: 'plus' %></li>
<% end %>

<table class="index" id='listing_sociable_links' data-hook>
  <colgroup>
    <col style="width: 20%" />
    <col style="width: 35%" />
    <col style="width: 35%" />
    <col style="width: 10%" />
  </colgroup>
  <thead>
    <tr data-hook="tax_header">
      <th><%= Spree.t('sociable.admin.headers.icon') %></th>
      <th><%= Spree.t('sociable.admin.headers.label') %></th>
      <th><%= Spree.t('sociable.admin.headers.url') %></th>
      <th class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <% if @links.count > 0 %>
    <% @links.each do |link| %>
    <tr data-hook="links_row" class="<%= cycle('odd', 'even')%>">
      <td class="align-center"><i class="fa fa-<%= link.icon %> fa-2x"></i></td>
      <td><%= link.label %></td>
      <td><%= link.url %></td>
      <td class="actions">
        <%= link_to_edit(link, { no_text: true, url: edit_admin_sociable_link_path(link.id) }) %>
        <%= link_to_delete(link, { no_text: true, url: admin_sociable_link_path(link.id) }) %>
      </td>
    </tr>
    <% end %>
    <% else %>
    <tr data-hook="links_none" class="<%= cycle('odd', 'even')%>">
      <td colspan="3"><%= Spree.t('sociable.admin.none') %></td>
    </tr>
    <% end %>
  </tbody>
</table>
